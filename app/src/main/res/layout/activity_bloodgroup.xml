<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Blood Group Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Blood Group"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />
        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/bloodtype"/>

        <GridLayout
            android:id="@+id/gridBloodTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnA"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/blood_group_selector"
                android:text="A"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/blood_group_selector"
                android:text="B"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnO"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/blood_group_selector"
                android:text="O"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAB"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/blood_group_selector"
                android:text="AB"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </GridLayout>

        <!-- Rh Factor Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rh Factor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/rhGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnPositive"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/blood_group_selector"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnNegative"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/blood_group_selector"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textSelectedBloodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Blood Type: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <!-- FINISH Button -->
        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="24dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>
